<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.project.TeacherController">
    <children>
        <TextField fx:id="teacherIDField" layoutX="50" layoutY="50" promptText="Teacher ID"/>
        <TextField fx:id="teacherNameField" layoutX="50" layoutY="100" promptText="Teacher Name"/>
        <Button text="Save Teacher" layoutX="50" layoutY="150" onAction="#handleSaveTeacherButton"/>
        <Button text="Load Teachers" layoutX="150" layoutY="150" onAction="#handleLoadTeachersButton"/>
        <TextArea fx:id="outputArea" layoutX="50" layoutY="200" prefWidth="400" prefHeight="200"/>
    </children>
</AnchorPane>
