<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.project.ExtraCurriculumController">
    <children>
        <TextField fx:id="studentIDField" layoutX="50" layoutY="50" promptText="Student ID"/>
        <CheckBox fx:id="sportsCheckbox" layoutX="50" layoutY="100" text="Participation in Sports"/>
        <Button text="Save Sports Participation" layoutX="50" layoutY="150" onAction="#handleSaveSportsButton"/>
        <Button text="Load Sports Participation" layoutX="200" layoutY="150" onAction="#handleLoadSportsButton"/>
        <TextArea fx:id="outputArea" layoutX="50" layoutY="200" prefWidth="400" prefHeight="200"/>
    </children>
</AnchorPane>
