<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="535.0" prefWidth="508.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/22" fx:controller="com.example.project.StaffController">
    <children>
        <TextField fx:id="staffIDField" layoutX="50" layoutY="20" promptText="Staff ID" />
        <TextField fx:id="firstNameField" layoutX="50" layoutY="60" promptText="First Name" />
        <TextField fx:id="lastNameField" layoutX="50" layoutY="100" promptText="Last Name" />
        <TextField fx:id="emailField" layoutX="50" layoutY="140" promptText="Email" />
        <TextField fx:id="usernameField" layoutX="50" layoutY="180" promptText="Username" />
        <PasswordField fx:id="passwordField" layoutX="50" layoutY="220" promptText="Password" />
        <Button layoutX="50" layoutY="260" onAction="#handleSaveStaffButton" text="Save Staff" />
        <Button layoutX="150" layoutY="260" onAction="#handleLoadStaffButton" text="Load Staff" />
        <Button layoutX="250" layoutY="260" onAction="#handleUpdateStaffButton" text="Update Staff" />
        <Button layoutX="350" layoutY="260" onAction="#handleDeleteStaffButton" text="Delete Staff" />
        <TextArea fx:id="outputArea" layoutX="50" layoutY="300" prefHeight="200" prefWidth="400" />
    </children>
</AnchorPane>
