<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.project.ExtraCurriculumController">
    <children>
        <TextField fx:id="studentIDField" layoutX="50" layoutY="50" promptText="Student ID"/>
        <TextArea fx:id="reportField" layoutX="50" layoutY="100" prefWidth="400" prefHeight="100" promptText="Report Details"/>
        <Button text="Save Report" layoutX="50" layoutY="250" onAction="#handleSaveReportButton"/>
        <Button text="Load Report" layoutX="150" layoutY="250" onAction="#handleLoadReportButton"/>
        <TextArea fx:id="outputArea" layoutX="50" layoutY="300" prefWidth="400" prefHeight="200"/>
    </children>
</AnchorPane>
