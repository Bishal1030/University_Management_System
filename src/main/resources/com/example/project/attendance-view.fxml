<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.collections.FXCollections?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane prefHeight="427.0" prefWidth="544.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/22" fx:controller="com.example.project.AttendanceController">
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
    </rowConstraints>

    <Label prefHeight="18.0" prefWidth="75.0" text="Student ID:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
    <TextField fx:id="studentIDField" GridPane.columnIndex="1" />

    <Label text="Date:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
    <TextField fx:id="dateField" GridPane.columnIndex="1" GridPane.rowIndex="1" />

    <Label text="Status:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
    <ComboBox fx:id="statusComboBox" GridPane.columnIndex="1" GridPane.rowIndex="2">
        <items>
            <FXCollections fx:factory="observableArrayList">
                <String fx:value="Present" />
                <String fx:value="Absent" />
                <String fx:value="Late" />
            </FXCollections>
        </items>
    </ComboBox>

    <HBox spacing="10.0" GridPane.columnIndex="1" GridPane.columnSpan="2" GridPane.rowIndex="3">
        <Button onAction="#handleSaveAttendanceButton" text="Save" />
        <Button onAction="#handleLoadAttendanceButton" text="Load" />
        <Button onAction="#handleUpdateAttendanceButton" text="Update" />
        <Button onAction="#handleDeleteAttendanceButton" text="Delete" />
    </HBox>

    <Label text="Output:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
    <TextArea fx:id="outputArea" prefHeight="122.0" prefWidth="243.0" GridPane.columnIndex="1" GridPane.columnSpan="2" GridPane.rowIndex="5" />
</GridPane>
