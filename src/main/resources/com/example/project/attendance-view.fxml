<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.collections.FXCollections?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>

<?import java.lang.String?>
<GridPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.project.AttendanceController">
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
    </rowConstraints>

    <Label text="Student ID:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
    <TextField fx:id="studentIDField" GridPane.columnIndex="1" GridPane.rowIndex="0" />

    <Label text="Date:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
    <TextField fx:id="dateField" GridPane.columnIndex="1" GridPane.rowIndex="1" />

    <Label text="Status:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
    <ComboBox fx:id="statusComboBox" GridPane.columnIndex="1" GridPane.rowIndex="2">
        <items>
            <FXCollections fx:factory="observableArrayList">
                <String fx:value="Present" />
                <String fx:value="Absent" />
                <String fx:value="Late" />
            </FXCollections>
        </items>
    </ComboBox>

    <HBox spacing="10.0" GridPane.columnIndex="0" GridPane.rowIndex="3" GridPane.columnSpan="2">
        <Button text="Save" onAction="#handleSaveAttendanceButton" />
        <Button text="Load" onAction="#handleLoadAttendanceButton" />
        <Button text="Update" onAction="#handleUpdateAttendanceButton" />
        <Button text="Delete" onAction="#handleDeleteAttendanceButton" />
    </HBox>

    <Label text="Output:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
    <TextArea fx:id="outputArea" GridPane.columnIndex="0" GridPane.rowIndex="5" GridPane.columnSpan="2" prefHeight="200.0" prefWidth="400.0" />
</GridPane>
