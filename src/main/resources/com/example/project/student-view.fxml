<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="579.0" prefWidth="506.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.project.StudentController">

    <children>
        <Label layoutX="50" layoutY="20" text="Student ID:" />
        <TextField fx:id="studentIDField" layoutX="150" layoutY="20" />

        <Label layoutX="50" layoutY="50" text="First Name:" />
        <TextField fx:id="firstNameField" layoutX="150" layoutY="50" />

        <Label layoutX="50" layoutY="80" text="Last Name:" />
        <TextField fx:id="lastNameField" layoutX="150" layoutY="80" />

        <Label layoutX="50" layoutY="110" text="Faculty:" />
        <TextField fx:id="facultyField" layoutX="150" layoutY="110" />

        <Label layoutX="50" layoutY="140" text="Email:" />
        <TextField fx:id="emailField" layoutX="150" layoutY="140" />

        <Label layoutX="50" layoutY="170" text="Gender:" />
        <TextField fx:id="genderField" layoutX="150" layoutY="170" />

        <Label layoutX="50" layoutY="200" text="Phone:" />
        <TextField fx:id="phoneField" layoutX="150" layoutY="200" />

        <Label layoutX="50" layoutY="230" text="Username:" />
        <TextField fx:id="usernameField" layoutX="150" layoutY="230" />

        <Label layoutX="50" layoutY="260" text="Password:" />
        <PasswordField fx:id="passwordField" layoutX="150" layoutY="260" promptText="Enter Password" />

        <Button layoutX="50" layoutY="300" onAction="#handleSaveStudentButton" text="Save Student" />
        <Button layoutX="150" layoutY="300" onAction="#handleLoadStudentsButton" text="Load Students" />

        <TextArea fx:id="outputArea" layoutX="50" layoutY="350" prefHeight="200" prefWidth="400" />

    </children>

</AnchorPane>
